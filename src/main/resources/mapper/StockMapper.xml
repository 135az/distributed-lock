<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yanjiazheng.dslock.mapper.StockMapper">

    <select id="selectStockForUpdate" resultType="com.yanjiazheng.dslock.pojo.Stock">
        select *
        from db_stock
        where id = #{id} for
        update
    </select>
</mapper>